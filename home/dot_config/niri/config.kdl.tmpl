spawn-at-startup "fcitx5" "-d"
spawn-at-startup "mako"
spawn-sh-at-startup "swaybg -i {{.wallpaper}} -m fill -o '*'"
spawn-at-startup "swayidle" "-w"
spawn-at-startup "idlehack"
spawn-sh-at-startup "waybar -c ~/.config/waybar/niri.jsonc"
spawn-at-startup "wlsunset" "-l 35.7" "-L 139.7"
spawn-at-startup "batt-notify"
spawn-at-startup "wl-paste" "--watch" "cliphist" "store"
spawn-at-startup "niri" "msg" "action" "focus-workspace-down"

input {
	keyboard {
		xkb {
			layout "{{.kb_layout}}"
		}
	}
	touchpad {
		tap
		natural-scroll
		// accel-profile "flat"
	}
	warp-mouse-to-focus
	focus-follows-mouse max-scroll-amount="33%"
}

output "eDP-1" {
	scale 1
}
output "DSI-1" {
	scale 1
	transform "270"
}

layout {
	gaps {{.gap}}
	center-focused-column "on-overflow"
	always-center-single-column

	default-column-width { proportion 0.5; }
	focus-ring {
		off
	}
	border {
		width {{.border_width}}
		active-color "#{{.col_accent}}88"
		inactive-color "#{{.col_nop}}88"
		urgent-color "#{{.col_warn}}88"
	}
	tab-indicator {
		width {{.border_width}}
		gap {{div (sub .gap .border_width) 2}}
		gaps-between-tabs {{.border_width}}
		corner-radius {{div .border_width 2}}
	}
	// struts {
	// 	left 32
	// 	right 32
	// }
}

prefer-no-csd
screenshot-path null
workspace "s"

window-rule {
	geometry-corner-radius {{.border_radius}}
	clip-to-geometry true
}

window-rule {
	match is-focused=true app-id=r#"^{{.terminal}}|^{{.fileManager}}$"#
	match is-focused=false
	opacity 0.9
}
window-rule {
	match is-focused=false app-id=r#"^{{.terminal}}|^{{.fileManager}}$"#
	opacity 0.8
}
window-rule {
	match title="^float$"
	match app-id=".*polkit.*"
	match app-id="^mpv|mpv-shallow$"
	open-floating true
}
window-rule {
	match app-id="^mpv-shallow$"
	// size 256 256
	default-column-width { fixed 320; }
	default-window-height { fixed 320; }
	default-floating-position x={{.gap}} y={{.gap}} relative-to="top-right"
	open-on-workspace "s"
}

cursor {
	xcursor-theme "Bibata-Modern-Ice"
	xcursor-size 24
}

hotkey-overlay {
	skip-at-startup
}

recent-windows {
	highlight {
		active-color "#{{.col_nop}}"
		urgent-color "#{{.col_warn}}"
		padding {{.gap}}
		corner-radius {{.border_radius}}
	}
}

binds {
	Mod+Shift+Slash { show-hotkey-overlay; }

	// apps
	Mod+C { close-window; }
	Mod+Q { spawn "{{.terminal}}"; }
	Mod+Space { spawn "{{.terminal}}" "-T float" "node"; }
	Mod+E { spawn "{{.fileManager}}"; }
	Mod+R { spawn "{{.drun}}"; }
	Mod+W { spawn "{{.wlan}}"; }
	Mod+M { spawn "exit-menu" "niri msg action quit -s"; }
	Mod+V { spawn "cliphist-menu"; }
	Mod+P { spawn "wl-mirror-menu"; }
	Mod+T { spawn "totp-menu"; }
	Mod+Shift+C { spawn "hyprpicker -a"; }


	// window
	// window.move
	Mod+Left  { focus-column-left; }
	Mod+Right { focus-column-right; }
	Mod+Up    { focus-window-or-workspace-up; }
	Mod+Down  { focus-window-or-workspace-down; }
	Mod+Next  { focus-tiling; }
	Mod+Prior { focus-floating; }
	Mod+Shift+Left  { consume-or-expel-window-left; }
	Mod+Shift+Right { consume-or-expel-window-right; }
	Mod+Shift+Up    { move-window-up-or-to-workspace-up; }
	Mod+Shift+Down  { move-window-down-or-to-workspace-down; }
	// window.mod
	Mod+F { toggle-window-floating; }
	Mod+G { toggle-column-tabbed-display; }
	Mod+Ctrl+F { maximize-column; }
	F11 { fullscreen-window; }

	// workspace
	// workspace.move
	Mod+1 { focus-workspace 1; }
	Mod+2 { focus-workspace 2; }
	Mod+3 { focus-workspace 3; }
	Mod+4 { focus-workspace 4; }
	Mod+5 { focus-workspace 5; }
	Mod+6 { focus-workspace 6; }
	Mod+7 { focus-workspace 7; }
	Mod+8 { focus-workspace 8; }
	Mod+9 { focus-workspace 9; }
	Mod+S { spawn "niri-mvfloat" "{\"name\":\"s\"}"; }
	// workspace.mod
	Mod+Shift+1 { move-column-to-workspace 1; }
	Mod+Shift+2 { move-column-to-workspace 2; }
	Mod+Shift+3 { move-column-to-workspace 3; }
	Mod+Shift+4 { move-column-to-workspace 4; }
	Mod+Shift+5 { move-column-to-workspace 5; }
	Mod+Shift+6 { move-column-to-workspace 6; }
	Mod+Shift+7 { move-column-to-workspace 7; }
	Mod+Shift+8 { move-column-to-workspace 8; }
	Mod+Shift+9 { move-column-to-workspace 9; }

	Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
	Mod+WheelScrollUp   cooldown-ms=150 { focus-workspace-up; }

	// media
	XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1+"; }
	XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "0.1-"; }
	XF86AudioMute        allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
	XF86AudioMicMute     allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }
	XF86MonBrightnessUp   allow-when-locked=true { spawn "brightnessctl" "--exponent=2" "s" "+5%"; }
	XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "--exponent=2" "s" "5%-"; }
	Shift+Print { screenshot; }
	Print { screenshot-screen; }
	Ctrl+Print { screenshot-window; }
}
