#!/bin/bash
if [ $XDG_CURRENT_DESKTOP == "Hyprland" ]; then
	x="hyprlock --immediate ;: lock\nhyprctl dispatch exit ;: logout"
else
	x="swaylock --fade-in .2 ;: lock\nswaymsg exit ;: logout"
fi
eval $(echo -e "$x\nsystemctl poweroff ;: power\nreboot\nsystemctl suspend\nsystemctl hibernate"|{{.menu}} -d -k /dev/null -p "exit..." -r "echo '%s'|awk 'NF{printf \"img:{{.chezmoi.homeDir}}/.local/share/octicons/%%s.svg:text:%%s\",\$NF,\$NF}'")
