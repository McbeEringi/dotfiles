#!/bin/bash
if [ $XDG_CURRENT_DESKTOP == "Hyprland" ]; then
	lock_exit="hyprlock --immediate ;: lock\nhyprctl dispatch exit ;: logout"
else
	lock_exit="swaylock --fade-in .2 ;: lock\nswaymsg exit ;: logout"
fi
eval $(echo -e "$lock_exit\nsystemctl poweroff ;: power\nreboot\nsystemctl suspend\nsystemctl hibernate"|{{.menu}} -d -k /dev/null -p "power..." -r "echo '%s'|awk 'NF{printf \"img:{{.chezmoi.homeDir}}/.local/share/octicons/%%s.svg:text:%%s\",\$NF,\$NF}'")


