#!/bin/bash
# RESUME=$(cat /proc/cmdline|grep -oP 'resume=\K\S+')
[[ $EXIT ]]||EXIT=$1
[[ $EXIT ]]||EXIT='loginctl terminate-session self'
echo $1
SWAP=$(swapon --show=SIZE --noheadings --bytes) # [[ $RESUME ]]&&
RAM=$(free -b|grep -oP 'Mem:\s+\K\d+')
eval $(echo -e "loginctl lock-session ;: lock\n$EXIT ;: exit logout\nsystemctl poweroff ;: power\nreboot\nsystemctl suspend$((($RAM<${SWAP:-0}))&&echo '\nsystemctl hibernate')"|{{.menu}} -d -k /dev/null -p "exit..." -r "echo '%s'|awk 'NF{printf \"img:$HOME/.local/share/octicons/%%s.svg:text:%%s\",\$NF,\$NF}'")
